{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claims Schema",
  "type": "object",
  "required": [
    "asin",
    "claim_id",
    "claim_text_verbatim",
    "claim_type",
    "has_citation",
    "source",
    "extraction_model",
    "extraction_version",
    "extraction_temperature",
    "claim_sha256",
    "page_sha256",
    "claim_scope",
    "has_numeric_quantifier",
    "medical_scope_flag",
    "extract_confidence",
    "gate_hint",
    "review_needed"
  ],
  "properties": {
    "asin": {
      "type": "string",
      "pattern": "^[A-Z0-9]{10}$"
    },
    "claim_id": {
      "type": "string",
      "pattern": "^[A-Z0-9]{10}_c\\d+$"
    },
    "claim_text_verbatim": {
      "type": "string",
      "minLength": 10,
      "maxLength": 1000
    },
    "claim_type": {
      "type": "string",
      "enum": ["efficacy", "safety", "mechanism", "medical"]
    },
    "implied_outcome": {
      "type": ["string", "null"]
    },
    "quantifier": {
      "type": ["string", "null"]
    },
    "has_citation": {
      "type": "boolean"
    },
    "source": {
      "type": "string",
      "enum": ["html", "image"]
    },
    "ocr_bbox": {
      "type": ["string", "null"]
    },
    "extraction_model": {
      "type": "string"
    },
    "extraction_version": {
      "type": "string"
    },
    "extraction_temperature": {
      "type": "number",
      "enum": [0, 0.0],
      "description": "MUST be 0 (deterministic)"
    },
    "claim_sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "page_sha256": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "claim_scope": {
      "type": "string",
      "enum": ["medical", "cosmetic", "wellness", "device_mechanism"]
    },
    "has_numeric_quantifier": {
      "type": "boolean"
    },
    "quant_value": {
      "type": ["string", "null"]
    },
    "quant_unit": {
      "type": ["string", "null"]
    },
    "comparator": {
      "type": ["string", "null"]
    },
    "phi_hint_ids": {
      "type": ["string", "null"]
    },
    "k_hint_ids": {
      "type": ["string", "null"]
    },
    "l_tokens": {
      "type": ["string", "null"]
    },
    "l_token_score": {
      "type": ["integer", "null"],
      "minimum": 0
    },
    "ingredient_hits": {
      "type": ["string", "null"]
    },
    "medical_scope_flag": {
      "type": "boolean"
    },
    "evidence_anchor_id": {
      "type": ["string", "null"]
    },
    "extract_confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "claim_group_id": {
      "type": ["string", "null"]
    },
    "gate_hint": {
      "type": "string",
      "enum": ["none", "phi_candidate", "k_candidate", "l_soft", "l_hard"]
    },
    "review_needed": {
      "type": "boolean"
    }
  }
}
